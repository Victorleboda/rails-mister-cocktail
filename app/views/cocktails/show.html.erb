<h1><%= @cocktail.name %></h1>

Doses:
<div>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to "delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ul>
</div>
<%= render 'doses/form' %>
<%= link_to "return to cocktails", cocktails_path %>
